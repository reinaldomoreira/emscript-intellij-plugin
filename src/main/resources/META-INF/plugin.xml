<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->

<idea-plugin>

    <id>com.github.reinaldomoreira.emscriptintellijplugin</id>
    <name>EMScript Highlight</name>
    <vendor>reinaldomoreira</vendor>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <!-- Text to display as description on Settings | Plugin page -->
    <description>
        <![CDATA[
      EMScript language support to an IntelliJ Platform-based IDE.
      <br><a href="https://www.kok-emm.com/docs/emscript/basic">EMScript</a> is a Macrorify language.
      <br>and this plugin add support for syntax highlighting, annotations, code completion, and other features.
      <br>
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <ul>
        <li><b>0.0.1</b> Initial release with basic features.</li>
      </ul>
    ]]>
    </change-notes>

    <!-- Text to display as company information on Settings | Plugin page -->
    <vendor url="https://plugins.jetbrains.com">IntelliJ Platform SDK</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Simple File" implementationClass="emscriptintellijplugin.SimpleFileType" fieldName="INSTANCE"
                  language="Simple" extensions="simple"/>
        <lang.parserDefinition language="Simple" implementationClass="emscriptintellijplugin.SimpleParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Simple"
                                       implementationClass="emscriptintellijplugin.SimpleSyntaxHighlighterFactory"/>
        <iconProvider implementation="emscriptintellijplugin.SimplePropertyIconProvider"/>
        <colorSettingsPage implementation="emscriptintellijplugin.SimpleColorSettingsPage"/>
        <annotator language="JAVA" implementationClass="emscriptintellijplugin.SimpleAnnotator"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="emscriptintellijplugin.SimpleLineMarkerProvider"/>
        <completion.contributor language="Simple"
                                implementationClass="emscriptintellijplugin.SimpleCompletionContributor"/>
        <psi.referenceContributor language="JAVA"
                                  implementation="emscriptintellijplugin.SimpleReferenceContributor"/>
        <lang.refactoringSupport language="Simple"
                                 implementationClass="emscriptintellijplugin.SimpleRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="Simple"
                                 implementationClass="emscriptintellijplugin.SimpleFindUsagesProvider"/>
        <lang.foldingBuilder language="JAVA" implementationClass="emscriptintellijplugin.SimpleFoldingBuilder"/>
        <gotoSymbolContributor implementation="emscriptintellijplugin.SimpleChooseByNameContributor"/>
        <lang.psiStructureViewFactory language="Simple"
                                      implementationClass="emscriptintellijplugin.SimpleStructureViewFactory"/>
        <navbar implementation="emscriptintellijplugin.SimpleStructureAwareNavbar"/>
        <lang.formatter language="Simple" implementationClass="emscriptintellijplugin.SimpleFormattingModelBuilder"/>
        <codeStyleSettingsProvider implementation="emscriptintellijplugin.SimpleCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider implementation="emscriptintellijplugin.SimpleLanguageCodeStyleSettingsProvider"/>
        <lang.commenter language="Simple" implementationClass="emscriptintellijplugin.SimpleCommenter"/>
        <lang.documentationProvider language="Simple" implementationClass="emscriptintellijplugin.SimpleDocumentationProvider"/>
        <spellchecker.support language="Simple" implementationClass="emscriptintellijplugin.SimpleSpellcheckingStrategy"/>
    </extensions>

</idea-plugin>
